<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>

		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
			integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
			crossorigin="anonymous"
		/>

		<script
			src="https://code.jquery.com/jquery-3.5.1.min.js"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
			integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
			crossorigin="anonymous"
		></script>
		<script
			src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
			integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"
			integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs="
			crossorigin="anonymous"
		></script>
	</head>
	<body>
		<div class="container">
			<div class="container">
				<div style="margin: 0 auto; width: fit-content;">Zilch V2</div>
			</div>
			<div class="container">
				<div class="row">
					<div class="col-md-3">
						<ul class="list-group">
							<li class="list-group-item"><a href="/addFriend">Search new Friends</a></li>
							<li class="list-group-item"><a href="/my_friend">My Friends</a></li>
							<li class="list-group-item">Third item</li>
						</ul>
					</div>
					<div class="col-md-9">
						<div class="input-group">
							<input
								type="text"
								id="searchName"
								class="form-control"
								placeholder="Search"
							/>
							<div class="input-group-btn">
								<button
									class="btn btn-default"
									style="border: 1px solid #ced4da;"
									type="submit"
								>
									<i class="fa fa-search"></i>
								</button>
							</div>
						</div>

						<ul class="list-group" id="list_friends">
							<% data.forEach(ele => { %>
							
							<% if(friends.includes(ele.username)) { %>
							<li class="list-group-item">
								<%- ele.username %>
								<span class="float-right">ADDED</span>
							</li>
							<% } else {%>
							<li class="list-group-item">
								<%- ele.username %>
								<form
									action="/make_friend"
									method="POST"
									class="float-right"
								>
									<input
										type="hidden"
										value="<%- ele.username %>"
										name="username"
									/>
									<button type="submit">ADD</button>
								</form>
							</li>
							<% } %> <% }) %>
						</ul>
					</div>
				</div>
			</div>
		</div>


		<script>
			const friends = <%- JSON.stringify(friends) %>;
		</script>


		<script>
			$("#searchName").on("input", Searching);

			function Searching() {
				console.log("*" + this.value);
				req = { word: this.value };

				$.ajax({
					url: "search",
					dataType: "jsonp",
					type: "GET",
					data: req,
					success: (data) => {
						// console.log(data);
						if (data) {
							const data1 = data.filter((user) => {
								console.log(user.username)
								var a = friends.includes(user.username);
								if (a) {
									return 0;
								} else {
									return 1;
								}
							});
							// console.log("**********-*---------**-")
							// console.log(data1);
							$("#list_friends").html(" ");
							data1.forEach((ele) => {
								$("#list_friends")
									.append(`<li class="list-group-item">
										${ele.username}
										<form
											action="/make_friend"
											method="POST"
											class="float-right"
										>
											<input
												type="hidden"
												value="${ele.username}"
												name="username"
											/>
											<button type="submit">ADD</button>
										</form>
									</li>`);
							});
						} else {
							$("#list_friends").html(
								"<li class='list-group-item'>No User found</li>"
							);
						}
					},
					error: (err) => {
						console.log(err);
					},
				});
			}
		</script>
	</body>
</html>
